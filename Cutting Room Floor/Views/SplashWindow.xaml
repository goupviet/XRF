<Window x:Class="Xrf.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XRF Splash" Height="156.186" Width="385.619"
        WindowStyle="None" WindowStartupLocation="CenterScreen" 
	    ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Loaded="Window_Loaded">
    <Window.Background>
        <ImageBrush TileMode="Tile" ImageSource="{StaticResource SplashScreenBackgroundImage}" Stretch="None"/>
    </Window.Background>
    <Grid>
        <Image HorizontalAlignment="Left" Height="100" Margin="115,10,0,0" VerticalAlignment="Top" Width="293" Source="{StaticResource XrfLogo}"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Source="{StaticResource XrfIcon}" />
        <TextBlock Margin="0,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Text="{Binding RandomSplashLine}"/>
    </Grid>
</Window>
